{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 450,
  "title": "Week 9 Homework Task",
  "projection": {"type": "equalEarth"},
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/anay0012/Week-9-Homework/refs/heads/main/ne_110m%20(1).json",
        "format": {"type": "topojson", "feature": "ne_110m_coastline"}
      },
      "mark": {"type": "geoshape", "fill": "grey", "stroke": "black"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/anay0012/Week-9-Homework/refs/heads/main/global_bleaching_environmental.csv"
      },
      "mark": {"type": "circle", "color": "blueviolet"},
      "encoding": {
        "longitude": {"field": "Longitude_Degrees", "type": "quantitative"},
        "latitude": {"field": "Latitude_Degrees", "type": "quantitative"},
        "size": {
          "field": "Percent_Bleaching",
          "type": "quantitative",
          "title": "Percent Bleaching"
        }
      }
    }
  ]
}
